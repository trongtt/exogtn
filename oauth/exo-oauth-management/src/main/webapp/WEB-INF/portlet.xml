<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

   <portlet>
      <description xml:lang="EN">The portlet manages the OAuth authorized token</description>
      <portlet-name>OAuthTokenManagementPortlet</portlet-name>
      <display-name>OAuth Access Tokens</display-name>
      <portlet-class>org.exoplatform.oauth.provider.portlet.UITokenPortlet</portlet-class>
      <supports>
         <mime-type>text/html</mime-type>
      </supports>
      <supported-locale>en</supported-locale>
      <portlet-info>
         <title>OAuth Access Tokens</title>
         <short-title>oToken</short-title>
         <keywords>System</keywords>
      </portlet-info>
      <container-runtime-option>
         <name>javax.portlet.actionScopedRequestAttributes</name>
         <value>true</value>
      </container-runtime-option>
   </portlet>

   <portlet>
      <description xml:lang="EN">Manage consumer applications that access to GateIn OAuth provider</description>
      <portlet-name>OAuthConsumerManagementPortlet</portlet-name>
      <display-name>OAuth Consumer Applications</display-name>
      <portlet-class>org.exoplatform.oauth.provider.portlet.UIConsumerPortlet</portlet-class>
      <supports>
         <mime-type>text/html</mime-type>
      </supports>
      <supported-locale>en</supported-locale>
      <portlet-info>
         <title>OAuth Consumer Applications</title>
         <short-title>oConsumer</short-title>
         <keywords>System</keywords>
      </portlet-info>
      <container-runtime-option>
         <name>javax.portlet.actionScopedRequestAttributes</name>
         <value>true</value>
      </container-runtime-option>
   </portlet>

   <portlet>
      <portlet-name>UIConsumerManagement</portlet-name>
      <display-name xml:lang="EN">OAuth Consumer Information</display-name>
      <portlet-class>org.juzu.portlet.JuzuPortlet</portlet-class>
      <init-param>
         <name>juzu.app_name</name>
         <value>ConsumerApplication</value>
      </init-param>
      <init-param>
         <name>juzu.run_mode</name>
         <value>prod</value>
      </init-param>
      <init-param>
         <name>juzu.inject</name>
         <value>weld</value>
      </init-param>
      <supports>
         <mime-type>text/html</mime-type>
      </supports>
      <portlet-info>
         <title>OAuth Consunmer Information</title>
         <keywords>juzu</keywords>
      </portlet-info>
      <portlet-preferences>
         <preference>
            <name>consumer</name>
            <value>par:/conf/consumer/extension.xml</value>
            <read-only>false</read-only>
         </preference>
      </portlet-preferences>
   </portlet>
   <portlet>
      <portlet-name>UITokenManagement</portlet-name>
      <display-name xml:lang="EN">OAuth Access Tokens</display-name>
      <portlet-class>org.juzu.portlet.JuzuPortlet</portlet-class>
      <init-param>
         <name>juzu.app_name</name>
         <value>TokenApplication</value>
      </init-param>
      <init-param>
         <name>juzu.run_mode</name>
         <value>prod</value>
      </init-param>
      <init-param>
         <name>juzu.inject</name>
         <value>weld</value>
      </init-param>
      <supports>
         <mime-type>text/html</mime-type>
      </supports>
      <portlet-info>
         <title>OAuth Access Tokens</title>
         <keywords>juzu</keywords>
      </portlet-info>
   </portlet>
</portlet-app>